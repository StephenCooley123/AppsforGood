<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.appsforgood" >

    <uses-permission android:name="android.settings.MANAGE_APP_ALL_FILES_ACCESS_PERMISSION"/>
    <uses-permission android:name="android.permission.MANAGE_MEDIA"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppsForGood">
        <activity
            android:name=".Settings"
            android:exported="false" />
        <activity
            android:name=".ParentalSettings"
            android:exported="false" />
        <activity
            android:name=".WordPage"
            android:exported="false" />
        <activity
            android:name=".HomePage"
            android:exported="false" />


        <activity
            android:name=".FlashcardActivity"
            android:exported="false" />

        <activity
            android:name=".MainActivity"
            android:exported="true" >
            android:theme="@style/Theme.AppsForGood" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>