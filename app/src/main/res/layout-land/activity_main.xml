<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ParentSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:height="50sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="monospace"
        android:onClick="Parental"
        android:text="@string/ParentStr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Creative"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="340dp" />

    <TextView
        android:id="@+id/Vocabli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:fontFamily="monospace"
        android:text="@string/VocabliStr"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Guide"
        android:layout_width="260sp"
        android:layout_marginTop="30dp"
        android:layout_height="120sp"
        android:fontFamily="monospace"
        android:onClick="Description"
        android:text="@string/GuidedStr"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ParentSettings"
        app:layout_constraintEnd_toStartOf="@+id/Creative"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
     
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Creative"
        android:layout_width="260sp"
        android:layout_height="120sp"
        android:fontFamily="monospace"
        android:onClick="nextWord"
        android:text="@string/CreativeStr"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/ParentSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Guide"
        app:layout_constraintTop_toBottomOf="@+id/Vocabli"
        app:layout_constraintVertical_bias="0.646" />


</androidx.constraintlayout.widget.ConstraintLayout>